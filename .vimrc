set spell spelllang=en_us
set nocompatible
"color scheme that i enjoy using
colorscheme elflord
set history=128
"always shows the cursor position
set ruler
"alters backspace behavior
set bs=2
"highlights found results in searches
set hlsearch
"incrementally searches for a string
set incsearch
"shows last status
set ls=2
"uses status line to show command competions
set wildmenu
"format options, allows for ease of editing comments
set fo=cqrtn
"shows previously/existing? commands while typing them
set showcmd
filetype plugin indent on
set pastetoggle=<F10>
"allows for syntax highlighting
syntax on

set ts=2
set sw=2
set et
set smartindent
map <ESC>[H <Home>
map <ESC>[F <End>
